{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "lib": [ "es2016", "dom" ],
    "module": "commonjs",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./wwwroot/js"
  },
  "include": [
    "scripts/**/*.ts"
  ],
  "exclude": [
    "wwwroot/js"
  ]
}