@using MudBlazor
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public string Title { get; set; }
    [Parameter] public string InitialValue { get; set; }
    public string InputValue { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(InputValue));
    void Cancel() => MudDialog.Cancel();
}

<MudDialog>
    <MudDialogTitle>@Title</MudDialogTitle>
    <MudDialogContent>
        <MudTextField @bind-Value="InputValue" Label="Enter text here" />
    </MudDialogContent>
    <MudDialogActions>
        <MudButton OnClick="Cancel" Color="Color.Secondary">Cancel</MudButton>
        <MudButton OnClick="Submit" Color="Color.Primary">OK</MudButton>
    </MudDialogActions>
</MudDialog>
